<?xml version="1.0" encoding="UTF-8"?>
<simulation>

  <!-- In this version we have ONE context  -->
  <context id = "io_dev">

   <axis_definition>
    <axis id="vert_axis_half_levels" name="half_levels"/>
    <axis id="vert_axis_full_levels" name="full_levels"/>
    <axis id="monthly_climatology" name="monthly_climatology" n_glo="12"/>
    <axis id="multi_data_axis" name="multi_data_axis" n_glo="5"/>
    <axis id="radiation_levels" name="radiation_levels"/>
   </axis_definition>

    <grid_definition>
     <grid id="node_grid">
       <domain domain_ref="node"/>
       <axis axis_ref="vert_axis_full_levels"/>
     </grid>
     <grid id="half_level_face_grid">
       <domain domain_ref="face"/>
       <axis axis_ref="vert_axis_half_levels"/>
     </grid>
     <grid id="full_level_face_grid">
       <domain domain_ref="face"/>
       <axis axis_ref="vert_axis_full_levels"/>
     </grid>
     <grid id="half_level_edge_grid">
       <domain domain_ref="edge"/>
       <axis axis_ref="vert_axis_half_levels"/>
     </grid>
     <grid id="monthly_half_level_face_grid">
       <domain domain_ref="face"/>
       <axis axis_ref="vert_axis_half_levels"/>
       <axis axis_ref="monthly_climatology"/>
     </grid>
     <grid id="multi_data_monthly_single_level_face_grid">
       <domain domain_ref="face"/>
       <axis axis_ref="monthly_climatology"/>
       <axis axis_ref="multi_data_axis"/>
     </grid>
    </grid_definition>

    <field_definition prec="8" >

      <!-- Core field group -->
      <field_group id="depository" freq_op="1ts" operation="instant" enabled=".TRUE.">
        <field id="W0_field" name="W0_field" long_name="Field on W0 function space" unit="1" grid_ref="node_grid" />
        <field id="W2H_field" name="W2H_field" long_name="Field on W2-horizontal function space" unit="1" grid_ref="half_level_edge_grid" />
        <field id="W2V_field" name="W2V_field" long_name="Field on W2-vertical function space" unit="1" grid_ref="full_level_face_grid" />
        <field id="W3_field" name="W3_field" long_name="Field on W3 function space" unit="1" grid_ref="half_level_face_grid" />
        <field id="W3_2D_field" name="W3_2D_field" long_name="Two dimensional field on W3 function space" unit="1" domain_ref="face" />
        <field id="multi_data_field" name="multi_data_field" long_name="Multi-data (ndata=5) field on W3, 2D function space" unit="1" domain_ref="face" axis_ref="multi_data_axis"/>
        <field id="seconds_field" name="W3_2D_seconds_field" long_name="Two dimensional field on W3 function space - time unit seconds" unit="1" domain_ref="face" />
        <field id="days_field" name="W3_2D_days_field" long_name="Two dimensional field on W3 function space - time unit days" unit="1" domain_ref="face" />
        <field id="months_field" name="W3_2D_months_field" long_name="Two dimensional field on W3 function space - time unit months" unit="1" domain_ref="face" />
      </field_group>

    </field_definition>

    <file_definition
      type="one_file"
      time_counter="none">

      <!-- File definition for output dump fields -->
      <file id="io_dev_time_varying_input" name="io_dev_time_varying_input" mode="read" output_freq="1ts" convention="UGRID" cyclic=".TRUE." enabled=".FALSE.">
        <field id="W3_2D_field_data" name="W3_2D_field" long_name="Time-varying, single-level field on W3 function space" unit="1" operation="instant" axis_ref="monthly_climatology" domain_ref="face" />
        <field id="multi_data_field_data" name="multi_data_field" long_name="Time-varying, multi-data (ndata=5) field on W3, 2D function space" unit="1" operation="instant" grid_ref="multi_data_monthly_single_level_face_grid" />
        <field id="W3_field_data" name="W3_field" long_name="Time-varying field on W3 function space" unit="1" operation="instant" grid_ref="monthly_half_level_face_grid" />
        <field id="seconds_field_data" name="W3_2D_field" unit="1" operation="instant" axis_ref="monthly_climatology" domain_ref="face" />
        <field id="days_field_data" name="W3_2D_field" unit="1" operation="instant" axis_ref="monthly_climatology" domain_ref="face" />
        <field id="months_field_data" name="W3_2D_field" unit="1" operation="instant" axis_ref="monthly_climatology" domain_ref="face" />
      </file>

      <!-- File definition for output dump fields -->
      <file id="io_dev_diag" name="io_dev_diag" mode="write" output_freq="1ts" convention="UGRID" enabled=".TRUE." timeseries="both" ts_prefix="time_">
        <field_group group_ref="depository" />
      </file>

    </file_definition>

  </context>

  <context id = "xios">
    <variable_definition>
      <variable_group id = "buffer">
        <variable id = "optimal_buffer_size" type = "string" >performance</variable>
        <variable id = "buffer_factor_size" type = "double" >1.0</variable>
      </variable_group>

      <variable_group id = "parameters" >
        <variable id = "using_server" type = "bool" >true</variable>
        <variable id = "info_level" type = "int" >50</variable>
        <variable id = "print_file" type="bool">true</variable>
      </variable_group>
    </variable_definition>
  </context>

</simulation>
