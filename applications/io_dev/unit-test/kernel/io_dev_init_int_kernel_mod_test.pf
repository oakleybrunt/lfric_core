!> Test the IO_Dev integer field initialisation kernel
!>
module io_dev_init_int_kernel_mod_test

  use constants_mod,                 only : i_def, r_def

  use get_unit_test_m3x3_q3x3x3_sizes_mod, only : get_w3_m3x3_q3x3x3_size

  use get_unit_test_m3x3_dofmap_mod,       only : get_w3_m3x3_dofmap

  use pFUnit_Mod

  implicit none

  private
  public :: test_all

  @TestCase
  type, extends(TestCase), public :: io_dev_init_test_type
    private
  contains
    procedure setUp
    procedure tearDown
    procedure test_all
  end type io_dev_init_test_type

  integer(i_def), parameter :: element_order = 0

contains

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  subroutine setUp( this )

    implicit none

    class(io_dev_init_test_type), intent(inout) :: this

  end subroutine setUp

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  subroutine tearDown( this )

    implicit none

    class(io_dev_init_test_type), intent(inout) :: this

  end subroutine tearDown

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @Test
  subroutine test_all( this )

    use io_dev_init_int_kernel_mod, only: io_dev_init_int_code

    implicit none

    class(io_dev_init_test_type), intent(inout) :: this

    ! Fields
    integer(i_def), allocatable :: int_data(:),  answer(:)

    ! Dofmaps
    integer(i_def), allocatable :: map_w3(:,:)

    integer(i_def) :: cell, i

    ! Sizes
    integer(i_def) :: nlayers, ncells
    integer(i_def) :: ndf_w3, undf_w3
    integer(i_def) :: dim_space, dim_space_diff
    integer(i_def) :: nqp_h, nqp_v

    nlayers = 3
    call get_w3_m3x3_q3x3x3_size( ndf_w3, undf_w3, ncells,   &
                                  dim_space, dim_space_diff, &
                                  nqp_h, nqp_v,              &
                                  nlayers )
    call get_w3_m3x3_dofmap(map_w3)

    allocate(int_data(undf_w3))
    allocate(answer(undf_w3))

    answer = (/ (i, i=1,undf_w3) /)

    ! Call the kernel
    call io_dev_init_int_code( nlayers,         &
                               int_data,        &
                               ncells, undf_w3, &
                               map_w3 )

    @assertEqual(int_data, answer)

    deallocate(int_data)
    deallocate(answer)
    deallocate(map_w3)

  end subroutine test_all

end module io_dev_init_int_kernel_mod_test
