!-----------------------------------------------------------------------------
!> Test that the diagnostics miniapp prognostic fields can be compiled and
!> that their unique ids are correct
!-------------------------------------------------------------------------------
module colours__prognostics__meta_mod_test

    use pFUnit_Mod

    implicit none

contains

    !> Tests the prognostic field metadata compiles and returns the correct
    !> unique_ids
    @test
    subroutine test_prognostics()

        use colours__prognostics__meta_mod, only : &
                colours__prognostics__meta_type

        implicit none

        type(colours__prognostics__meta_type) :: prognostics

        prognostics = colours__prognostics__meta_type()

        @assertEqual("colours__red", prognostics%red%get_unique_id())
        @assertEqual("colours__green", prognostics%green%get_unique_id())
        @assertEqual("colours__blue", prognostics%blue%get_unique_id())

    end subroutine test_prognostics

end module colours__prognostics__meta_mod_test
