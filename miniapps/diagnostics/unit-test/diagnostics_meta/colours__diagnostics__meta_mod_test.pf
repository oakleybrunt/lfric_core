!-----------------------------------------------------------------------------
!> Tests that the diagnostics miniapp diagnostic fields can be compiled and
!> that their unique ids are correct
!-------------------------------------------------------------------------------
module colours__diagnostics__meta_mod_test

    use pFUnit_Mod

    implicit none

contains

    !> Tests the diagnostic field metadata compiles and returns the correct
    !> unique_id
    @test
    subroutine test_diagnostics()

        use colours__diagnostics__meta_mod, only : &
                colours__diagnostics__meta_type

        implicit none

        type(colours__diagnostics__meta_type) :: diagnostics

        diagnostics = colours__diagnostics__meta_type()

        @assertEqual("colours__hex", diagnostics%hex%get_unique_id())

    end subroutine test_diagnostics

end module colours__diagnostics__meta_mod_test
