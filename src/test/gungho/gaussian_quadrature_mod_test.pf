module gaussian_quadrature_mod_test
  implicit none 

contains

  @test
  subroutine test_gaussian_quadrature()
    use pFUnit_Mod
    use gaussian_quadrature_mod
    use constants_mod
    implicit none

    real(kind=dp) :: polynomial(ngp,ngp,ngp)
    real(kind=dp) :: result,answer, diff, epsilon

    type(gaussian_quadrature_type) :: gaussian_quadrature

    gaussian_quadrature  = gaussian_quadrature_type()

    polynomial = 0.33333333333333333333333D0

    result = gaussian_quadrature%integrate(polynomial)

    answer = 0.33333333333333333333333D0

    epsilon = 1.0e-14

    @assertEqual( answer, result, epsilon )

  end subroutine test_gaussian_quadrature

end module gaussian_quadrature_mod_test
