module multiplicity_kernel_mod_test

  implicit none 


contains

  @test
  subroutine multiplicity_kernel_test()

    use pFUnit_Mod
    use field_mod,                  only : field_type,      &
                                           field_proxy_type
    use multiplicity_kernel_mod,    only : multiplicity_code
    use constants_mod,              only : i_def, r_def

    use configuration_mod,     only: QUAD, element_order
    use mesh_mod,              only: mesh_type, PLANE_BI_PERIODIC
    use function_space_mod,    only: function_space_type                       &
                                   , purge_function_spaces
    use fs_continuity_mod,     only: W1, W2
    use reference_element_mod, only: reference_cube, deallocate_reference      &
                                   , reference_element

    implicit none

    type(field_type) :: chi(3)
    type(field_proxy_type )   :: chi_p(3) 

    type(mesh_type)           :: mesh
    type(function_space_type) :: fs
    type(function_space_type), pointer :: w1_fs => null()
    type(function_space_type), pointer :: w2_fs => null()



    real(kind=r_def) :: tol, answer

    integer :: df, cell
    integer(i_def) :: err

    ! Variables for testing multiplicity
    type( field_type ) :: m

    integer          :: ndf, undf

    integer, pointer :: map(:) => null()

    type( field_proxy_type ) :: m_p
    
    tol = 1.0e-12_r_def 

    reference_element = QUAD
    call reference_cube()

    ! Dummy mesh mod has 9 cells, 3 layers and is uniform in vertical
    mesh = mesh_type(PLANE_BI_PERIODIC)

    w1_fs => fs%get_instance( mesh, element_order, W1 )
    w2_fs => fs%get_instance( mesh, element_order, W2 )

    ! Test multiplicity computation for W1
    m = field_type( vector_space = w1_fs )
    m_p    = m%get_proxy()

    ndf  = m_p%vspace%get_ndf( )
    undf = m_p%vspace%get_undf( )
    
    m_p%data(:) = 0.0_r_def
    do cell = 1,m_p%vspace%get_ncell()
      map => m_p%vspace%get_cell_dofmap( cell )
    
      call multiplicity_code(m_p%vspace%get_nlayers(), &
                            m_p%data, & 
                            ndf, & 
                            undf, &
                            map &
                            )
    end do 
    map => m_p%vspace%get_cell_dofmap( 1 )
    answer = 2.0_r_def
    do df = 1,4
      @assertEqual(answer, m_p%data(map(df) ), tol)
    end do
    answer = 4.0_r_def
    do df = 5,12
      @assertEqual(answer, m_p%data(map(df) ), tol)
    end do

    ! Test multiplicity computation for W2
    m = field_type( vector_space = w2_fs )
    m_p    = m%get_proxy()

    ndf  = m_p%vspace%get_ndf( )
    undf = m_p%vspace%get_undf( )
    
    m_p%data(:) = 0.0_r_def
    do cell = 1,m_p%vspace%get_ncell()
      map => m_p%vspace%get_cell_dofmap( cell )
    
      call multiplicity_code(m_p%vspace%get_nlayers(), &
                            m_p%data, & 
                            ndf, & 
                            undf, &
                            map &
                            )
    end do 
    map => m_p%vspace%get_cell_dofmap( 1 )
    answer = 2.0_r_def
    do df = 1,4
      @assertEqual(answer, m_p%data(map(df) ), tol)
    end do
    answer = 1.0_r_def
    @assertEqual(answer, m_p%data(map(5) ), tol)
    answer = 2.0_r_def
    @assertEqual(answer, m_p%data(map(6) ), tol)

    ! Tear down ...
    call deallocate_reference()
    call purge_function_spaces()

  end subroutine multiplicity_kernel_test

end module multiplicity_kernel_mod_test
